    <script>
        // ================ DOM ELEMENTS ================
        const navMenu = document.getElementById('navMenu');
        const menuToggle = document.getElementById('menuToggle');
        const navLinks = document.querySelectorAll('.nav-link');
        const pageContents = document.querySelectorAll('.page-content');
        const tabButtons = document.querySelectorAll('.tab-button');
        const tabContents = document.querySelectorAll('.tab-content');

        // ================ INITIALIZATION ================
        document.addEventListener('DOMContentLoaded', function() {
            // Set up navigation
            setupNavigation();
            
            // Set up tabs for past work
            setupTabs();
            
            // Start PERFECT counter animations
            animateCountersPerfect();
            
            // Set initial active page from URL hash
            const hash = window.location.hash.substring(1);
            if (hash) {
                showPage(hash);
                updateNavLinks(hash);
            }
        });

        // ================ TABS FUNCTIONALITY ================
        function setupTabs() {
            tabButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const tabId = button.getAttribute('data-tab');
                    
                    // Remove active class from all buttons
                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    
                    // Add active class to clicked button
                    button.classList.add('active');
                    
                    // Hide all tab contents
                    tabContents.forEach(content => content.classList.remove('active'));
                    
                    // Show selected tab content
                    document.getElementById(tabId).classList.add('active');
                });
            });
        }

        // ================ NAVIGATION FUNCTIONS ================
        function setupNavigation() {
            // Mobile menu toggle
            if (menuToggle) {
                menuToggle.addEventListener('click', function() {
                    navMenu.classList.toggle('active');
                });
            }
            
            // Navigation link clicks
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href').substring(1);
                    
                    // Close mobile menu if open
                    if (navMenu.classList.contains('active')) {
                        navMenu.classList.remove('active');
                    }
                    
                    // Show target page
                    showPage(targetId);
                    
                    // Update active nav link
                    updateNavLinks(targetId);
                });
            });
            
            // Handle browser back/forward buttons
            window.addEventListener('hashchange', function() {
                const pageId = window.location.hash.substring(1) || 'home';
                showPage(pageId);
                updateNavLinks(pageId);
            });
        }

        function showPage(pageId) {
            // Hide all pages
            pageContents.forEach(page => {
                page.classList.remove('active');
            });
            
            // Show target page
            const targetPage = document.getElementById(pageId);
            if (targetPage) {
                targetPage.classList.add('active');
                window.scrollTo(0, 0);
                
                // Update URL
                window.location.hash = pageId;
                
                // Update page title
                const pageTitles = {
                    'home': 'YoungStudios | Professional Roblox UI Designer',
                    'ui-design': 'UI Design Portfolio | YoungStudios',
                    'scripting': 'Luau Scripting Services | YoungStudios',
                    'past-work': 'Past Work & Projects | YoungStudios',
                    'reviews': 'Client Reviews | YoungStudios',
                    'get-hired': 'Get Hired | YoungStudios',
                    'contact': 'Contact | YoungStudios',
                    'tos': 'Terms of Service | YoungStudios'
                };
                document.title = pageTitles[pageId] || 'YoungStudios';
            }
        }

        function updateNavLinks(activePageId) {
            navLinks.forEach(link => {
                const linkPageId = link.getAttribute('href').substring(1);
                if (linkPageId === activePageId) {
                    link.classList.add('active');
                } else {
                    link.classList.remove('active');
                }
            });
        }

        // ================ PERFECT COUNTER ANIMATION ================
        function animateCountersPerfect() {
            // Set initial values immediately (no animation)
            document.getElementById('visitsCounter').textContent = '6.3';
            document.getElementById('clientsCounter').textContent = '120';
            document.getElementById('projectsCounter').textContent = '43';
            
            // Wait a tiny bit then do smooth animation
            setTimeout(() => {
                const counters = [
                    { element: document.getElementById('visitsCounter'), target: 6.3, duration: 2500 },
                    { element: document.getElementById('clientsCounter'), target: 120, duration: 2000 },
                    { element: document.getElementById('projectsCounter'), target: 43, duration: 1800 }
                ];
                
                counters.forEach(counter => {
                    if (!counter.element) return;
                    
                    let startTime = null;
                    const startValue = 0;
                    const targetValue = counter.target;
                    const duration = counter.duration;
                    
                    function animateCounter(timestamp) {
                        if (!startTime) startTime = timestamp;
                        const elapsed = timestamp - startTime;
                        const progress = Math.min(elapsed / duration, 1);
                        
                        // EaseOutCubic for smooth animation
                        const easeProgress = 1 - Math.pow(1 - progress, 3);
                        
                        let currentValue;
                        if (counter === counters[0]) { // visits (decimal)
                            currentValue = (startValue + (targetValue - startValue) * easeProgress).toFixed(1);
                            if (currentValue.endsWith('.0')) {
                                currentValue = Math.floor(currentValue);
                            }
                        } else { // whole numbers
                            currentValue = Math.floor(startValue + (targetValue - startValue) * easeProgress);
                        }
                        
                        counter.element.textContent = currentValue;
                        
                        if (progress < 1) {
                            requestAnimationFrame(animateCounter);
                        } else {
                            // Final value
                            if (counter === counters[0]) {
                                counter.element.textContent = targetValue.toFixed(1);
                                if (counter.element.textContent.endsWith('.0')) {
                                    counter.element.textContent = Math.floor(targetValue);
                                }
                            } else {
                                counter.element.textContent = Math.floor(targetValue);
                            }
                        }
                    }
                    
                    requestAnimationFrame(animateCounter);
                });
            }, 300);
        }

        // ================ CONTACT FORM ================
        function submitContactForm() {
            const name = document.getElementById('contactName').value;
            const email = document.getElementById('contactEmail').value;
            const type = document.getElementById('projectType').value;
            const details = document.getElementById('projectDetails').value;
            
            if (!name || !email || !details) {
                alert('Please fill in all required fields.');
                return;
            }
            
            // Create email body
            const subject = encodeURIComponent(`Project Inquiry: ${type} - ${name}`);
            const body = encodeURIComponent(`Name: ${name}\nEmail: ${email}\nProject Type: ${type}\n\nProject Details:\n${details}\n\n---\nSent from YoungStudios Portfolio`);
            
            // Redirect to email client
            window.location.href = `mailto:northchicagorp0@gmail.com?subject=${subject}&body=${body}`;
        }

        // ================ CAREER FORM ================
        function submitCareerForm() {
            const name = document.getElementById('careerName').value;
            const email = document.getElementById('careerEmail').value;
            const type = document.getElementById('developmentType').value;
            const about = document.getElementById('aboutYou').value;
            
            if (!name || !email || !about) {
                alert('Please fill in all required fields.');
                return;
            }
            
            // Create email body
            const subject = encodeURIComponent(`Career Application: ${type} - ${name}`);
            const body = encodeURIComponent(`Name: ${name}\nEmail: ${email}\nDevelopment Type: ${type}\n\nAbout You:\n${about}\n\n---\nSent from YoungStudios Get Hired Form`);
            
            // Redirect to email client
            window.location.href = `mailto:northchicagorp0@gmail.com?subject=${subject}&body=${body}`;
        }

        // ================ HOVER EFFECTS ================
        document.addEventListener('mouseover', function(e) {
            // Add hover class to interactive elements
            if (e.target.classList.contains('btn') || 
                e.target.classList.contains('nav-link') ||
                e.target.classList.contains('service-card') ||
                e.target.classList.contains('project-card') ||
                e.target.classList.contains('review-card') ||
                e.target.classList.contains('stat-badge')) {
                e.target.classList.add('hover-effect');
            }
        });

        document.addEventListener('mouseout', function(e) {
            // Remove hover class
            if (e.target.classList.contains('hover-effect')) {
                e.target.classList.remove('hover-effect');
            }
        });
    </script>
</body>
</html>
